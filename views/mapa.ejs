<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Leaflet -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"
    />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
      #monument-list {
        max-height: 500px;
        overflow-y: auto;
      }

      .swal2-popup {
        max-height: 90vh;
        overflow-y: auto;
      }
    </style>
  </head>
  <body class="container mt-4">
    <h1 class="text-center mb-4">Mapa de Monumentos de MÃ¡laga</h1>

    <div class="row">
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-header text-bg-primary text-center fw-bold">
            Lista de Monumentos
          </div>
          <ul id="monument-list" class="list-group list-group-flush"></ul>
        </div>
      </div>

      <!-- Mapa -->
      <div class="col-md-8">
        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div id="map" class="rounded" style="height: 500px"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Leaflet -->
    <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>

    <!-- Script del Mapa -->
    <script src="/javascripts/mapa.js"></script>
  </body>
</html>
